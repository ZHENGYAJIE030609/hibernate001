<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hpit.entity.Teacher" table="TEACHER" schema="USER1">
        <id name="tid">
            <column name="TID" sql-type="varchar2(11)" length="11"/>
        </id>
        <property name="tname">
            <column name="TNAME" sql-type="varchar2(20)" length="20"/>
        </property>
        <property name="tage">
            <column name="TAGE" sql-type="number(4)" precision="4"/>
        </property>
        <property name="taddress">
            <column name="TADDRESS" sql-type="varchar2(100)" length="100" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>